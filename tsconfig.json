{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true
  },
  "include": ["src/**/*"],           // Solo incluimos el código en src
  "exclude": ["node_modules", "dist"] // Excluimos node_modules y dist, no la carpeta raíz
}